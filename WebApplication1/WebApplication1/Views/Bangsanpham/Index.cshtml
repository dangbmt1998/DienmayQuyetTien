@using WebApplication1.Models
@model List<BangSanPham>
@{
    ViewBag.Title = "Sản phẩm";
}

<h2>Sản phẩm</h2>

<p>
    <a  href="@Url.Action("Create")" class="btn btn-success">Tạo sản phẩm</a>
</p>
<table id="BangSanPham" class="table table-hover">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Giá gốc
            </th>
            <th>
                Giá trả góp
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Tên loại
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @item.MaSP
            </td>
            <td>
                @item.TenSP
            </td>
            <td>
                @item.GiaBan.ToString("N0")
            </td>
            <td>
                @item.GiaGoc.ToString("N0")
            </td>
            <td>
                @item.GiaGop.ToString("N0")
            </td>
            <td>
                @item.SoLuongTon.ToString("N0")
            </td>
            <td>
                @item.LoaiSanPham.TenLoai
            </td>
            <td>

                <a title="Sửa" href="@Url.Action("Edit", new { id = item.id })" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                <a title="Xem" href="@Url.Action("Details", new { id = item.id })" class="btn btn-info"><span class="glyphicon glyphicon-search"></a>
                <a title="Xóa" href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></a>

            </td>
        </tr>
    </tbody>
}

</table>

@section scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#BangSanPham').DataTable();
        });
    </script>
}