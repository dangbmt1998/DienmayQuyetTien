@using WebApplication1.Models
@model List<BangSanPham>
@{
    ViewBag.Title = "Sản phẩm";
}

<h2>Sản phẩm</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Tạo sản phẩm</a>
</p>
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Giá gốc
        </th>
        <th>
            Giá trả góp
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Tên loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaGoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaGop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongTon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
        </td>
        <td>
            
            <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-warning">Sửa</a>
            <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info">Xem</a>
            <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger">Xóa</a>
            
        </td>
    </tr>
}

</table>
